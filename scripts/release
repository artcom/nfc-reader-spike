set -eo pipefail

DIST_DIR="dist"
ARTIFACTS_DIR="artifacts"

echo "Building"
mkdir "${DIST_DIR}"
pkg -t win src/main.js -o $DIST_DIR/nfc-reader-spike

echo "Packaging"
mkdir "${ARTIFACTS_DIR}"
cd "${DIST_DIR}"
echo {\"branch\": \"$TRAVIS_BRANCH\", \"commit\": \"$TRAVIS_COMMIT\", \"build\": $TRAVIS_BUILD_NUMBER} > build.json
zip -r -9 "../${ARTIFACTS_DIR}/nfc-reader-spike-${TRAVIS_BRANCH}.zip" *
tar czvf "../${ARTIFACTS_DIR}/nfc-reader-spike-${TRAVIS_BRANCH}.tar.gz" *
